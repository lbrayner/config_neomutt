#!/bin/bash

if [[ -f ~/.cache/$MUTT_CACHE/mutt_search_abort ]]
then
    exit 0
fi

if [[ -f ~/.cache/$MUTT_CACHE/mutt_search_results ]]
then 
    nmuch2limitpgcycl ~/.cache/$MUTT_CACHE/mutt_search_results \
        | notmuch2limit > ~/.cache/$MUTT_CACHE/mutt_limit_pattern
else
    rm -f ~/.cache/$MUTT_CACHE/mutt_limit_pattern
fi
