#!/usr/bin/env bash

# set -x
set -e

print_usage() {
	printf '\n%s\n' "$(basename $0) [-H] [-R]"
}

headers=""
redact=""
while getopts ":HR" opt
do
    case ${opt} in
        H)
            headers="true"
            ;;
        R)
            redact="--redact-headers"
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
    esac
done
shift $((OPTIND - 1))

# Reads from stdin
if [[ ! ${#} -eq 0 ]]
then
	print_usage 1>&2
	exit 1
fi

tempdir=$(mktemp -d --suffix=_mutt)
rfc822="${tempdir}/rfc822.eml"
text="${tempdir}/text.eml"

cat <&0 > "${rfc822}"

latin1(){
    file -i "${1}" | grep -q -i iso-8859-1
}

if latin1 "${rfc822}"
then
    iconvert -B -f latin1 -t utf-8 "${rfc822}"
fi

program="mail2txt"

if [[ -n "${headers}" ]]
then
    program="mail2headers"
fi

"${program}" ${redact} "${rfc822}" > "${text}"

# Last line discarded
if [[ -z "${headers}" ]]
then
    full_text="${tempdir}/full_text.eml"
    cp -f "${text}" "${full_text}"
    head -n -1 < "${full_text}" > "${text}"
fi

dos2unix -f "${text}"
text_mailcap "${text}"
