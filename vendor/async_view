#!/bin/sh

# set -x
set -e

print_usage() {
	printf '\n%s\n' "$(basename $0)"
}

# Reads from stdin
if [ ! ${#} -eq 0 ]
then
	print_usage
	exit 1
fi

redir=$(mktemp --suffix=_mutt)
tmpfile=$(mktemp --suffix=_mutt)

cat <&0 > "${redir}"

latin1(){
    file -i "${1}" | grep -q -i iso-8859-1
}

if `latin1 "${redir}"`
then
    iconvert -B -f latin1 -t utf-8 "${redir}"
fi

mail2txt "${redir}" > "${tmpfile}"
dos2unix -f "${tmpfile}"
rm -f "${redir}"
text_mailcap "${tmpfile}"
